<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
		<div class='row'>
		
	    <h2>User info</h2>
	    <table class='table'>
	      <tr>
				 <td>
				 <% if @current_user.profile_image.attached? %>
				   <%= image_tag @current_user.image, size: "100x100" %>
			   <% else %>
				   <%= image_tag "no_image.jpg", size: "100x100" %></td> <!-- 画像がない場合はデフォルト画像 -->
			   <% end %>
				 </td>
	      </tr>
	      <tr>
	        <th>name</th>
	        <th><%= @user.name %></th>
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= @user.introduction %></p></th>
	      </tr>
	    </table>
			<%= link_to  edit_user_path(@current_user), class: "btn btn-outline-secondary btn-block" do %>
				<i class="fas fa-user-cog"></i> 

	    <% end %>

	    </div>
	    <h2 class="mt-3">New book</h2>
	    <%= form_with model: @new_book do |f| %>
        <div>Tittle</div>
        <%= f.text_field :title %>
        
        <div>Opinion</div>
        <%= f.text_area :body %>
        
      <%= f.submit 'Create Book',class: "btn btn-success" %>
      <% end %>
	    </div>
	    <div class='col-md-8 offset-md-1'>
	    <h2>Book detail</h2>
	    <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
	          <th>Title</th>
	          <th>Opinion</th>
	          <th colspan="3"></th>
	        </tr>
	      </thead>
	      <tbody>
            <tr>
						<td>
						<% if @current_user.profile_image.attached? %>
							<%= image_tag @current_user.image, size: "100x100" %>
						<% else %>
							<%= image_tag "no_image.jpg", size: "100x100" %></td> <!-- 画像がない場合はデフォルト画像 -->
						<% end %>
					</td>
		
             <td><%= link_to @book.title, book_path(@book) %></td>
             <td><%= @book.body %></td>
             <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete,class: "btn btn-danger","data-confirm" => "本当に削除しますか？" %></td>
             <% end %>
             
            </tr>
            <td><%= link_to @user.name, user_path(@user) %></td>


        </tbody>
	    </table>
	  </div>
	</div>
</div>



