<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <table class='table'>
	      <tr>
				<td>
				<% if @current_user.profile_image.attached? %>
				  <%= image_tag @current_user.image, size: "100x100" %>
			  <% else %>
				  <%= image_tag "no_image.jpg", size: "100x100" %></td> <!-- 画像がない場合はデフォルト画像 -->
			  <% end %>
			</td>

	      </tr>
	      <tr>
	        <th>name</th>
	        <th><%= @current_user.name %></th>
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= @current_user.introduction %></p></th>
	      </tr>
	    </table>
	    <div class='row'>
      <%= link_to "プロフィールを編集", edit_user_path(@current_user), class: "btn btn-warning" %>
    
	    </div>
	    <h2 class="mt-3">New book</h2>
	    <%= form_with model: @new_book do |f| %>
        <div>Tittle</div>
        <%= f.text_field :title %>
        
        <div>Opinion</div>
        <%= f.text_area :body %>
        
      <%= f.submit 'Create Book' %>
      <% end %>
	    </div>
	    <div class='col-md-8 offset-md-1'>
	    <h2>Books</h2>
	    <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
					  <th></th>
	          <th>Title</th>
	          <th>Opinion</th>
	          <th colspan="3"></th>
	        </tr>
	      </thead>
	      <tbody>
          <% @books.each do |book| %>
            <tr>
						<td>
						<% if book.user.profile_image.attached? %>
							<%= image_tag book.user.image, size: "100x100" %>
						<% else %>
							<%= image_tag "no_image.jpg", size: "100x100" %></td> <!-- 画像がない場合はデフォルト画像 -->
						<% end %>
					</td>
		
             <td><%= link_to book.title, book_path(book) %></td>
             <td><%= book.body %></td>
            </tr>

          <% end %> 
        </tbody>
	    </table>
	  </div>
	</div>
</div>
