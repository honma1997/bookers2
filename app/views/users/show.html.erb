<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <table class='table'>
	      <tr>
	        <% if @current_user.profile_image.attached? %>
					  <td><%= image_tag @current_user.image, size: "100x100" %></td>
					<% else %>
					  <td><%= image_tag "no_image.jpg", size: "100x100" %></td>
					<% end %>
	      </tr>
	      <tr>
	        <th>name</th>
	        <th><%= @user.name %></th>
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= @user.introduction %></th>
	      </tr>
	    </table>
	    <div class='row'>
	      <%= link_to  edit_user_path(@current_user), class: "btn btn-outline-secondary btn-block" do %>
				  <i class="fas fa-user-cog"></i>
				<% end %>
	    </div>
	    <h2 class="mt-3">New book</h2>
	      <%= form_with model: @book do |f| %>
			    <div>Tittle</div>
			    <div><%= f.text_field :title %></div>
			    <div>Opinion</div>
			    <div><%= f.text_area :body %></div>
			    <div><%= f.submit 'Create Book',class: "btn btn-success" %></div>
			  <% end %>
	  </div>
	  <div class='col-md-8 offset-md-1'>
	    <h2>Books</h2>
	    <!-- 投稿した書籍一覧表示を作成しましょう。 -->
	    <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
	          <th></th>
	          <th>Title</th>
	          <th>Opinion</th>
	          <th colspan="3"></th>
	        </tr>
	      </thead>
	      <tbody>
					<% @books.each do |book| %>
					 <tr>
						 <% if @user_image.attached? %>
						  <td><%= image_tag @user_image, size: "100x100" %></td>
					   <% else %>
					    <td><%= image_tag "no_image.jpg", size: "100x100" %>
						 <% end %>
						 <td><%= link_to book.title, book_path(book) %></td>
						 <td><%= book.body %></td>
					 </tr>
					<% end %>
				</tbody>
	    </table>
	  </div>
	</div>
</div>