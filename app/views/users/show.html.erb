
<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <table class='table'>
	      <tr>
	        <%= image_tag @current_user.image, size: "150x150" %>  
	      </tr>
	      <tr>
	        <th>name</th>
	        <th><%= @user.name %></th>
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= @user.introduction %></p></th>
	      </tr>
	    </table>
	    <div class='row'>
      <% if @user == current_user %>
      <%= link_to "プロフィールを編集", edit_user_path(@user), class: "btn btn-warning" %>
      <% end %>
    
	    </div>
	    <h2 class="mt-3">New book</h2>
	    <%= form_with model: @book do |f| %>
        <h4>tittle</h4>
        <%= f.text_field :title %>
        
        <h4>option</h4>
        <%= f.text_area :body %>
        
      <%= f.submit 'Create Book' %>
      <% end %>
	    </div>
	    <div class='col-md-8 offset-md-1'>
	    <h2>Books</h2>
	    <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
	          <th>Title</th>
	          <th>Opinion</th>
	          <th colspan="3"></th>
	        </tr>
	      </thead>
	      <tbody>
          <% @books.each do |book| %>
            <tr>
             <td><%= book.title %></td>
             <td><%= book.body %></td>
            </tr>

          <% end %> 
        </tbody>
	    </table>
	  </div>
	</div>
</div>