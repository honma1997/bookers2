
<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <table class='table'>
	      <tr>
				<% if @current_user.image.attached? %>
				<td><%= image_tag @current_user.image, size: "100x100" %></td>
			<% else %>
				<td><%= image_tag "no_image.jpg", size: "100x100" %></td> <!-- 画像がない場合はデフォルト画像 --></td>
			<% end %>

	      </tr>
	      <tr>
	        <th>name</th>
	        <th><%= @user.name %></th>
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= @user.introduction %></p></th>
	      </tr>
	    </table>
	    <div class='row'>
      <% if @user == current_user %>
      <%= link_to "プロフィールを編集", edit_user_path(@user), class: "btn btn-warning" %>
      <% end %>
    
	    </div>
	    <h2 class="mt-3">New book</h2>
	    <%= form_with model: @book do |f| %>
				<div>Tittle</div>
        <div><%= f.text_field :title %></div>
        <div>Opinion</div>
        <div><%= f.text_area :body %></div>
        
      <%= f.submit 'Create Book' %>
      <% end %>
	    </div>
	    <div class='col-md-8 offset-md-1'>
	    <h2>Books</h2>
	    <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
					  <th></th>
	          <th>Title</th>
	          <th>Opinion</th>
	          <th colspan="3"></th>
	        </tr>
	      </thead>
	      <tbody>
          <% @books.each do |book| %>
            <tr>
						<% if @user_image.attached? %>
						<td><%= image_tag @user_image, size: "100x100" %></td>
					<% else %>
						<td><%= image_tag "no_image.jpg", size: "100x100" %> <!-- 画像がない場合はデフォルト画像 --></td>
					<% end %>
             <td><%= link_to book.title, book_path(book) %></td>
             <td><%= book.body %></td>
            </tr>

          <% end %> 
        </tbody>
	    </table>
	  </div>
	</div>
</div>