<div class='container px-5 px-sm-0'>
	<div class='row'>
		<div class='col-md-3'>
			<div class='row'>
				<h2>User info</h2>
					<table class='table'>
						<tr>
							<td>
									<% if @current_user.profile_image.attached? %>
										<%= image_tag @current_user.image, size: "100x100" %>
									<% else %>
										<%= image_tag "no_image.jpg", size: "100x100" %></td> <!-- 画像がない場合はデフォルト画像 -->
									<% end %>
							</td>
						</tr>
						<tr>
							<th>name</th>
							<th><%= @current_user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
						<th><%= @current_user.introduction %></p></th>
						</tr>
					</table>
						<%= link_to edit_user_path(@current_user), class: "btn btn-outline-secondary btn-block" do %>
							<i class="fas fa-user-cog"></i> 
						<% end %>
			</div>
		<div class='row'>
			<h2 class="mt-3">New book</h2>
				<%= form_with model: @book do |f| %>
					<div>Tittle</div>
					<%= f.text_field :title %>
					<div>Opinion</div>
					<%= f.text_area :body %>
					<div><%= f.submit 'Create Book',class: "btn btn-success" %></div>
				<% end %>
		</div>
	</div>
		<div class='col-md-8 offset-md-1'>
			<h2>Users</h2>
			<table class='table table-hover table-inverse'>
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th colspan="3"></th>
				</tr>
			</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td>
								<% if user.profile_image.attached? %>
									<%= image_tag user.image, size: "100x100" %>
								<% else %>
									<%= image_tag "no_image.jpg", size: "100x100" %></td> <!-- 画像がない場合はデフォルト画像 -->
								<% end %>
							</td>
							<td><%= user.name %></td>
							<td><%= link_to "Show", user_path(user) %></td>
						</tr>
					<% end %> 
				</tbody>
			</table>
		</div>
	</div>
</div>

