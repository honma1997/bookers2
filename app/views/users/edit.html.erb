<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <%= form_with model: @user do |f| %>
	      <div>Name</div>
	      <div><%= f.text_field :name %></div>
	      <div>Image</div>
	      <div><%= f.file_field :image, accept: "image/*" %></div>
	      <div>Introduction</div>
	      <div><%= f.text_area :introduction %></div>
	      <div><%= f.submit "Update User" %></div>
	    <% end %>
	  </div>
	</div>
</div>